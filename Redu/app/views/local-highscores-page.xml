    <Label text="Your scores" class="title-leaderboard"/>
    <ListView id="list" items="{{ localScores }}">
       <ListView.itemTemplate>
         <Label text="{{ $value }}" />
       </ListView.itemTemplate>
    </ListView>
  </StackLayout>
</Page>
