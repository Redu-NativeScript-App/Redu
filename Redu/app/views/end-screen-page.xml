<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <ScrollView>
    <StackLayout id="end-game-container">
      <Label text="Congrats" class="score-title"/>
      <Label text="Score:" class="title"/>
      <Label id="scoreLabel" class="score-label"/>
      <Image id="selfieContainer"/>
      <Button text="Take a selfie" tap="onSelfieTapped" id="selfieBtn" class="menuButton" />
      <Button text="Share" tap="onShareTapped" id="shareBtn" class="menuButton" />
    </StackLayout>
  </ScrollView>
</Page>
