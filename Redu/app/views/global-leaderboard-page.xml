<Page xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" loaded="pageLoaded">
  <StackLayout>
    <Label text="Leaderboard" class="title-leaderboard"/>
    <Label text="Top 10" class="title-leaderboard"/>    
    <ListView id="list" items="{{ highscores }}">
       <ListView.itemTemplate>
         <Label text="{{ $value }}" class="leadeboard-lv-style" />
       </ListView.itemTemplate>
    </ListView>
  </StackLayout>
</Page>
